{
    auto_https off
    email kkucukengin@gmail.com
}

:80 {
    encode gzip

    # --- MLflow API + AJAX (strip ONLY the /mlflow prefix) ---
    @mlapi path /mlflow/api/* /mlflow/ajax-api/*
    handle @mlapi {
        uri strip_prefix /mlflow
        reverse_proxy mlflow:5000 {
            header_up X-Forwarded-Prefix /mlflow
            header_up Host {host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # --- MLflow UI & static (no strip) ---
    handle /mlflow* {
        reverse_proxy mlflow:5000 {
            header_up X-Forwarded-Prefix /mlflow
            header_up Host {host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Grafana
    handle /grafana* {
        basic_auth {
            {$ADMIN_USER} {$ADMIN_HASH}
        }
        reverse_proxy grafana:3000
    }

    # Prometheus
    handle /prometheus* {
        basic_auth {
            {$ADMIN_USER} {$ADMIN_HASH}
        }
        reverse_proxy prometheus:9090
    }

    # Default API
    reverse_proxy api:8000
}
